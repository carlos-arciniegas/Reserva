<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Pases de Abordaje</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>N° Pase Abordaje</th>
                            <th>N° Vuelo</th>
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Selección</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var item in Model)
                            {

                                <tr id="@item._id">
                                    <td>@item._id</td>
                                    <td>@item._vuelo</td>
                                    <td>@item._nombreOri</td>
                                    <td>@item._nombreDest</td>
                                    <td>
                                        <a href="#" title="Seleccionar"><i class="fa fa-check modificar"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        catch
                        {

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "pagingType": "simple_numbers",
            "language": {
                "lengthMenu": "N° _MENU_ registros por página.",
                "zeroRecords": "No se encontró registro.",
                "info": "  Mostrando registros _START_ - _END_  (_TOTAL_ registros totales).",
                "infoEmpty": "0 de 0 de 0 registros",
                "infoFiltered": "(Encontrado de _MAX_registros)",
                "search": "Buscar: ",
                "processing": "Procesando la información",
                "paginate": {
                    "first": " |< ",
                    "previous": "Anterior",
                    "next": "Siguiente",
                    "last": " >| "
                }
            }
        });
    });
</script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //e.preventDefault();
        $(".modificar").click(function () {
            var identificador = $(this).parent().parent().parent().attr("id");
            jQuery.ajax({
                type: "GET",
                url: "/gestion_check_in/Equipaje",
                data: { id: identificador }
            }).done(function (data) {
                $("#contenido").empty();
                $("#contenido").append(data);
            }).fail(function () {
                alert("Ocurrió un error")
            });


        });


    });
</script>

