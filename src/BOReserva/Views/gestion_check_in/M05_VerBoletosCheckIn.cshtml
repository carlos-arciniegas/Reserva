<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Boletos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>N° Boleto</th>
                            <th>Fecha emisión</th>
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Selección</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var item in Model)
                            {
                                String fecha_emi = @item._fechaBoleto.Day + "/" + @item._fechaBoleto.Month + "/" + @item._fechaBoleto.Year;
                
                                <tr id="@item._id">
                                    <td>@item._id</td>
                                    <td>@fecha_emi</td>
                                    <td>@item._origen.Name</td>
                                    <td>@item._destino.Name</td>
                                    <td>
                                        <a href="#" title="Modificar"><i class="fa fa-pencil modificar"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        catch
                        {

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //e.preventDefault();
        $(".modificar").click(function () {
            var identificador = $(this).parent().parent().parent().attr("id");
            jQuery.ajax({
                type: "GET",
                url: "/gestion_check_in/M05_VerDetalleBoleto",
                data: { id: identificador }
            }).done(function (data) {
                $("#contenido").empty();
                $("#contenido").append(data);
            }).fail(function () {
                alert("Ocurrió un error")
            });


        });


    });
</script>



