
<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Platos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Codigo Vuelo</th>
                            <th>Nombre Plato</th>
                            <th>Cantidad Comida</th>

                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var item in Model)
                            {


                                <tr id="@item._id">
                                    <td>@item._codigoVuelo</td>
                                    <td>@item._nombrePlato</td>
                                    <td>@item._cantidadComida</td>
                                    <td>

                                        
                                    </td>
                                </tr>
                            }
                        }
                        catch (Exception e)
                        {

                        }

                    <tfoot>
                        <tr>
                            <th>Codigo Vuelo</th>
                            <th>Nombre Plato</th>
                            <th>Cantidad Comida</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>



