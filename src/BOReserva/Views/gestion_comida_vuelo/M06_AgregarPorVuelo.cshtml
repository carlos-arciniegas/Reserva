
<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Vuelos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Vuelo</th>
                            <th>Ciudad Origen</th>
                            <th>Ciudad Destino</th>>
                            <th>Capacidad Turista/Ejecutiva/VIP</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var item in Model)
                            {
                                    <tr id="@item._id">
                                    <td>@item._codigoVuelo</td>
                                    <td>@item._ciudadOrigen</td>
                                    <td>@item._ciudadDestino</td>
                                    <td>@item._capacidadTurista</td>
                                    <td>@item._capacidadEjecutiva</td>
                                    <td>@item._capacidadVip</td>
                                    <td>
                                        <a href="#" title="Agregar"><i class="fa fa-plus agregarvuelo"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        catch (Exception e)
                        {

                        }

                    <tfoot>
                        <tr>
                            <th>Vuelo</th>
                            <th>Ciudad Origen</th>
                            <th>Ciudad Destino</th>
                            <th>Capacidad Turista/Ejecutiva/VIP</th>
                            <th>Opciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>



<!-- DataTables -->
<script src="../../Content/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="../../Content/plugins/datatables/dataTables.bootstrap.min.js"></script>


