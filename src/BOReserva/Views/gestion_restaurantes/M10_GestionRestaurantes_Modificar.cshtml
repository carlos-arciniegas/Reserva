@model BOReserva.Models.gestion_restaurantes.CRestauranteModeloVista

<script src="~/Scripts/Scripts_Restaurantes/llamadas_generales.js"></script>
<link href="@Url.Content("~/Scripts/select2/css/select2.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/select2/js/select2.min.js")"></script>

<script type="text/javascript">
$(document).ready(function() {
    $("#M10BOciudadDropdown").select2();
});
</script>


<!---------------------- SECCION DE MODIFICAR RESTAURANTE ---------------->
@using (Html.BeginForm("modificarRestaurante", "gestion_restaurantes", null, FormMethod.Post, new { @id = "formModificarRestaurante", @class = "form-horizontal" }))
{

    <div class="row">
        <div class="col-md-12">
            <div class="box">

                <div class="box-body">
                    <h2 class="box-title"> Modificar Restaurante</h2>
                    <div class="row">
                        <div class="col-md-12">

                            @Html.TextBoxFor(m => m._id, null, new { @class = "hidden", @id = "id" })

                            <div>
                                &nbsp;
                                <div class="col-md-12">
                                    <div class="col-xs-6">
                                        <label for="nombre">Nombre del Restaurante(<span style="color:red">*</span>):</label>
                                        @Html.TextBoxFor(m => m._nombre, null, new { @class = "form-control", @placeholder = "El Rincón de Chicho", @id = "nombre" })

                                    </div>
                                    <div class="col-xs-6">
                                        <label for="descripcion">Descripción del Restautante:</label>
                                        @Html.TextBoxFor(m => m._descripcion, null, new { @class = "form-control", @placeholder = "Un restaurante para toda la familia", @id = "descripcion" })

                                    </div>
                                </div>
                            </div>

                            <div>
                                &nbsp;
                                <div class="col-md-12">
                                    <div class="col-xs-6">
                                        <label for="direccion">Dirección(<span style="color:red">*</span>):</label>
                                        @Html.TextBoxFor(m => m._direccion, null, new { @class = "form-control", @placeholder = "169 Harold Ave. San Francisco, CA", @id = "direccion" })

                                    </div>
                                    <div class="col-xs-6">
                                        <label for="ciudad">Ciudad(<span style="color:red">*</span>):</label>
                                        @try
                                        {
                                            @Html.DropDownListFor(m => m._idLugar, new SelectList(Model._listaCiudades, "_id", "_nombre"), new { id = "M10BOciudadDropdown" })
                                        }
                                        catch
                                        {

                                        }


                                    </div>
                                </div>
                            </div>

                            <div>
                                &nbsp;
                                <div class="col-md-12">
                                    <div class="col-xs-6">
                                        <label for="horarioApertura">Hora Apertura(<span style="color:red">*</span>):</label>
                                        @Html.DropDownListFor(m => m._horarioApertura, new SelectList(Model._horarioLista))
                                        @*Html.TextBoxFor(m => m._horarioApertura, null, new { @class = "form-control", @id = "horarioApertura"})*@

                                    </div>
                                    <div class="col-xs-6">
                                        <label for="horarioCierre">Hora Cierre(<span style="color:red">*</span>):</label>
                                        @Html.DropDownListFor(m => m._horarioCierre, new SelectList(Model._horarioLista))
                                        @*Html.TextBoxFor(m => m._horarioCierre, null, new { @class = "form-control", @id = "horarioCierre"})*@

                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12" style="margin-top:10px;">
                                <div class="col-md-2">
                                    <button type="button" id="aceptarRestauranteModificacion" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
                                </div>
                                <div class="col-md-2">
                                    <button id="cancelarRestauranteModificacion" type="button" class="btn btn-danger" style="display:block; margin-left:auto; margin-right:auto;">Cancelar</button>
                                </div>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
}
<!------------------- FIN DE SECCION DE MODIFICAR RESTAURANTE ---------------->
