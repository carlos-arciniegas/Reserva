

<div class="row">
    <link rel="stylesheet" href="~/Content/plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="col-md-12">

                <div class="col-xs-6">
                    <h2 class="box-title">Lista de Restaurantes </h2>
                </div>

                <div class="col-xs-3" style="margin-left:262px">
                    &nbsp;
                    &nbsp;

                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                &nbsp;
                &nbsp;
                <table id="m10-ver-restaurantes" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th hidden="hidden">ID</th>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th>telefono</th>
                            <th>Descripción</th>
                            <th>Hora Apertura</th>
                            <th>Hora Cierre</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var item in Model.listaRestaurantes)
                            {
                                <tr id="@item.id">
                                    <td hidden="hidden">@item.id</td>
                                    <td>@item.nombre</td>
                                    <td>@item.direccion</td>
                                    <td>@item.Telefono</td>
                                    <td>@item.descripcion</td>
                                    <td>@item.horarioApertura</td>
                                    <td>@item.horarioCierre</td>


                                    <td>
                                        <a href="#" title="Modificar"><i class="fa fa-pencil modificar"></i></a>
                                        <a href="#" title="Eliminar"><i class="fa fa-times eliminar"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        catch
                        {

                        }

                    <tfoot>
                        <tr>
                            <th hidden="hidden">ID</th>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th>telefono</th>
                            <th>Descripción</th>
                            <th>Hora Apertura</th>
                            <th>Hora Cierre</th>
                            <th>Opciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>

