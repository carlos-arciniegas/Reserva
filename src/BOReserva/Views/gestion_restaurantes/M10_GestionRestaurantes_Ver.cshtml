@model BOReserva.Models.gestion_restaurantes.CRestauranteModelo



<link href="@Url.Content("~/Scripts/select2/css/select2.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/select2/js/select2.min.js")"></script>
<script src="~/Scripts/Scripts_Restaurantes/llamadas_generales.js"></script>

<!-- DataTables -->
<script src="../../Content/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="../../Content/plugins/datatables/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="../../Content/plugins/slimScroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="../../Content/plugins/fastclick/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="../../Content/dist/js/app.min.js"></script>
<!-- page script -->

<script type="text/javascript">
$(document).ready(function() {
    $("#m10-ver-restaurantes").DataTable();
});
</script>

@{

    var lugar = ViewData["Lugar"] as IEnumerable<SelectListItem>;
 }

@using (Html.BeginForm("M10_GestionRestaurantes_Ver", "gestion_restaurantes", null, FormMethod.Post, new { @id = "formConsultarRestaurante", @class = "form-horizontal" }))
{
<div class="row">
    <link rel="stylesheet" href="~/Content/plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="col-md-12">

                <div class="col-xs-6">
                    <h2 class="box-title">Lista de Restaurantes </h2>
                </div>

                
                <div class="col-xs-3" style="margin-left:262px">
                    &nbsp;
                    &nbsp;
                    @Html.DropDownList("Ids", ViewBag.Ciudad as SelectList, "Ciudades", new { @class = "form-control", @required = "required", @onchange = "this.form.submit()" })
               
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                &nbsp;
                &nbsp;
                <table id="m10-ver-restaurantes" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th hidden="hidden">ID</th>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th>telefono</th>
                            <th>Descripción</th>
                            <th>Hora Apertura</th>
                            <th>Hora Cierre</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var item in Model.listaRestaurantes)
                            {
                                <tr id="_id">
                                    <td hidden="hidden">@item.id</td>
                                    <td>@item.nombre</td>
                                    <td>@item.direccion</td>
                                    <td>@item.Telefono</td>
                                    <td>@item.descripcion</td>
                                    <td>@item.horarioApertura</td>
                                    <td>@item.horarioCierre</td>
                                   
                                    <td>
                                        <a href="#" title="Modificar"><i class="fa fa-pencil modificar"></i></a>
                                        <a href="#" title="Eliminar"><i class="fa fa-times eliminar"></i></a>
                                    </td>
                                </tr>
                                }
                            }
                            catch
                            {

                            }

                    <tfoot>
                        <tr>
                            <th hidden="hidden">ID</th>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th>telefono</th>
                            <th>Descripción</th>
                            <th>Hora Apertura</th>
                            <th>Hora Cierre</th>
                            <th>Opciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
}