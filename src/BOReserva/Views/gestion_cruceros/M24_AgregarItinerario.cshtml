@model BOReserva.Models.gestion_cruceros.CGestion_itinerario
<script src="~/Scripts/Scripts_Cruceros/scripts_cruceros.js"></script>
@using (Html.BeginForm("guardarItinerario", "gestion_cruceros", null, FormMethod.Post, new { @id = "formGuardarItinerario", @class = "form-horizontal" }))
{
    <div class="box">
        <div class="box-body">
            <div class="box-header with-border">
                <h1 class="box-title"> Agregar Itinerario</h1>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"></button>
                </div>
            </div>
            <div class="modal-body col-xs-12" id="bodyCruc" style="margin-left:24% ; height:300px">
                <section id="primeraParte">
                    <div class="form-group" style="margin-bottom:20px">
                        <label>Cruceros:</label>
                        @{
                            SelectList list = ViewBag.ShowDropDown;
                        }
                        @*@Html.DropDownList("DROPDOWNID", list, "Cruceros", new { @id = "fk_id_crucero" })*@
                        @Html.DropDownListFor(m => m._fkCrucero, list, new { @id = "fk_id_crucero", @style = "width:41% ; margin-left:2%" })
                    </div>
                    <div class="form-group" style="margin-bottom:20px">
                        <label>Rutas:</label>
                        @{
                            SelectList list1 = ViewBag.ShowDropDown;
                        }
                        @*@Html.DropDownList("DROPDOWNID", list1, "Rutas", new { @id = "fk_id_ruta" })*@
                        @Html.DropDownListFor(m => m._fkRuta, list1, new { @id = "fk_id_ruta", @style = "width:41% ; margin-left:2%" })
                    </div>

                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label>Fecha Inicio:</label>
                                @Html.TextBoxFor(m => m._fechaInicio, null, new { @type = "date", @id = "fecha_inicio", @style = "width:41% ; margin-left:2%" })
                            </div>
                        </div>
                    <</div>
                    <div class="row">
                         <div class="col-xs-6">
                             <div class="form-group">
                                        <label>Fecha Fin:</label>
                                        @Html.TextBoxFor(m => m._fechaFin, null, new { @type = "date", @id = "fecha_fin", @style = "width:41% ; margin-left:4%" })
                             </div>
                          </div>
                     </div>
                            <div class="col-md-6" style="margin-top:10px;">
                                <button type="button" id="guardaritinerario" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
                            </div>
                </section>
            </div>
            <div class="modal-body col-xs-12" id="bodyCruc" style="margin-left: 14.5%">
                <table>
                    <thead>
                        <tr class="crucero crTitles" id="listaCruceros">
                            <th style="width:170px;height: 40px;text-align: center">Crucero</th>
                            <th style="width:170px;height: 40px;text-align: center"> <b>Ruta</b></th>
                            <th style="width:170px;height: 40px;text-align: center"><b>Fecha Inicio</b></th>
                            <th style="width:170px;height: 40px;text-align: center"><b>Fecha Fin</b> </th>
                            <th style="width:170px;height: 40px;text-align: center"><b>Acciones</b> </th>
                        </tr>
                    </thead>
                    <tbody id="tablaItinerario" class="">
                        @*@{
                                foreach (var cabina in Model.cabinas)
                                {
                                    <tr id="@cabina._idCabina ">
                                        <td class="crNombre">@cabina._nombreCabina</td>
                                        <td class="crCompania">@cabina._precioCabina</td>
                                        @if (@cabina._estatus == "activo")
                                        {
                                            <td class="crStatus"><i class="fa fa-circle started"></i></td>
                                            <td class="crAcciones"><i class="fa fa-eye"></i> <i class="fa fa-pencil"></i> <i class="fa fa-times"></i> <i class="fa fa-trash eliminar_crucero"></i></td>
                                        }
                                        else {
                                            <td class="crStatus"><i class="fa fa-circle paused"></i></td>
                                            <td class="crAcciones"><i class="fa fa-eye"></i> <i class="fa fa-pencil"></i> <i class="fa fa-check"></i> <i class="fa fa-trash"></i></td>
                                        }
                                    </tr>

                                }
                            }*@
                    </tbody>
                </table>
            </div>
        </div>

    </div>



    <script>
        $("#guardar_itinerario").click(function (e) {
            e.preventDefault();
            var form = $("#formGuardarItinerario");
            $.ajax({
                url: "gestion_cruceros/guardarItinerario",
                data: form.serialize(),
                type: 'POST',
                success: function (data) {
                    console.log(data)
                    //$("#tablaCabinas tr").remove();
                    $("#tablaItinerario").append("<tr><td>" + $("#fecha_inicion").val() + "</td><td>" + $("#fecha_fin").val() + "</td></tr>");
                    //$.ajax({
                    //    url: '/gestion_cruceros/M24_AgregarCabinas',
                    //    type: 'GET',
                    //    data: '',
                    //    success: function (data, textStatus, jqXHR) {
                    //        $("#contenido").empty();
                    //        $("#contenido").append(data);
                    //    },
                    //    error: function (jqXHR, textStatus, errorThrown) {
                    //        alert(errorThrown);
                    //    }
                    //});
                    //$('#formGuardarCabina')[0].reset();
                },
                error: function (data) {
                    console.log(data);
                    $('#formGuardarItinerario')[0].reset();
                }
            });
        });
    </script>

    <script>
        $("#cambioItinerario").click(function (e) {
            e.preventDefault();
            var iteina_id = $(this).closest('tr').attr('id');
            
            //console.log(crucero_id);
            // lo puse con ruta porque considero que un itinerario
            //se inactiva si la ruta se inactivano si se inactiva el crucero 
            console.log(ruta_id);
            $.ajax({
                url: "gestion_cruceros/cambioEstatusItinerario",
                data: { "id_ruta": ruta_id },
                type: 'POST',
                success: function (data) {
                    $.ajax({
                        url: '/gestion_cruceros/M24_AgregarItinerario',
                        type: 'GET',
                        data: '',
                        success: function (data, textStatus, jqXHR) {
                            $("#contenido").empty();
                            $("#contenido").append(data);
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            alert(errorThrown);
                        }
                    });
                },
                error: function (data) {
                    console.log(data);
                }
            });
        });
    </script>
}