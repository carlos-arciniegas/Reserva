@model List<BOReserva.Models.gestion_vuelo.CVuelo>
<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Vuelos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Codigo Vuelo</th>
                            <th>Ciudad Origen</th>
                            <th>Ciudad Destino</th>
                            <th>Fecha Despegue</th>
                            <th>Fecha Aterrizaje </th>
                            <th>Status</th>
                            <th>Avion</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (BOReserva.Models.gestion_vuelo.CVuelo item in Model)
                            {
                              
                                <tr id="@item._codigoVuelo">
                                    <td>@item._codigoVuelo</td>
                                    <td>@item._ciudadOrigen</td>
                                    <td>@item._ciudadDestino</td>
                                    <td>@item._fechaDespegue</td>
                                    <td>@item._fechaAterrizaje</td>
                                    <td>@item._statusVuelo</td>
                                    <td>@item._matriculaAvion</td>
                                    <td>
                                        <a href="#"> <i class="fa fa-eye mostrar"></i></a>
                                        <a href="#"><i class="fa fa-gear modificar"></i></a>
                                        @{
                                            if (item._statusVuelo == "activo")
                                            {
                                                <a href="#" title="Activar/Desactivar vuelo"><i class="fa fa-toggle-on desactivar"></i></a>
                                            }
                                            if (item._statusVuelo == "inactivo")
                                            {
                                                <a href="#" title="Activar/Desactivar vuelo"><i class="fa fa-toggle-off activar"></i></a>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        catch
                        {
                            <script>
                                alert("Error en el listado, por favor intente acceder nuevamente");
                            </script>
                        }

                    <tfoot>
                        <tr>
                            <th>Codigo Vuelo</th>
                            <th>Ciudad Origen</th>
                            <th>Ciudad Destino</th>
                            <th>Fecha Despegue</th>
                            <th>Fecha Aterrizaje </th>
                            <th>Status</th>
                            <th>Avion</th>
                            <th>Opciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
             <!-- .box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

<script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
