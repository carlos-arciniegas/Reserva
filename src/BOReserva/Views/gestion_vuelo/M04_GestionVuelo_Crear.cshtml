<!-- Indico que para esta vista, M08_GestionVuelo_Crear, utilizare el modelo Models/gestion_vuelo/CGestionVuelo-->
@model BOReserva.Models.gestion_vuelo.CCrear_Vuelo


@using (Html.BeginForm("guardarVuelo", "gestion_vuelo", null, FormMethod.Post, new { @id = "formGuardarVuelo",@class = "form-horizontal" }))
{
    <div class="row">
        <div class="col-md-12">
            <h1>
                Gestion de vuelos
                <small>Crear un vuelo</small>
            </h1>
            <div class="box box-solid">
                <div class="box box-solid">
                    <div class="box-tools pull-right">
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <!-- TEXTBOX CODIGO DE VUELO -->
                        <div class="col-md-12" style="margin-top:10px;">
                            <div class="col-xs-6">
                                <label style="display:block; margin-left:auto; margin-right:auto;">Codigo de vuelo (<span style="color: #d9534f">*</span>):</label>
                                @Html.TextBoxFor(m => m._codigoVuelo, null, new { @class = "form-control", @placeholder = "Ej: AA 2254", @id = "codigoVuelo", @allign = "center" })
                            </div>
                        </div>
                        <!-- FIN CODIGO DE VUELO -->
                        <div>&nbsp;</div>
                        <div class="col-md-12" style="margin-top:10px;">
                            <!-- DROPDOWN CIUDAD ORIGEN -->
                            <div class="col-xs-6">
                                <label> Ciudad Origen (<span style="color: #d9534f">*</span>):</label>
                                @Html.DropDownListFor(m => m._ciudadOrigen, new SelectList(Model._ciudadesOrigen, "Value", "Text"), "Seleccione una ciudad origen", new { @style = "width: 100%;" })
                            </div>
                            <!-- FIN CIUDAD ORIGEN -->
                            <!-- DROPDOWN CIUDAD DESTINO  -->
                            <div class="col-xs-6">
                                <label> Ciudad Destino (<span style="color: #d9534f">*</span>):</label>
                                @Html.DropDownListFor(m => m._ciudadDestino, new SelectList(Model._ciudadesDestino, "Value", "Text"),
                            "Seleccione una ciudad destino", new { @style = "width: 100%;", @selected = "Ej: Caracas", @disabled = "disabled" })
                            </div>
                            <!-- FIN CIUDAD DESTINO  -->
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12" style="margin-top:10px;">
                            <div class="col-xs-6">
                                <!-- DATE FECHA DESPEGUE  -->
                                <label> Fecha Despegue (<span style="color: #d9534f">*</span>):</label>
                                @Html.TextBoxFor(m => m._fechaDespegue, null, new { @class = "datepicker", @type = "date", @id = "fechadespegue", @style = "width: 100%;" })
                            </div>
                            <!-- FIN FECHA DESPEGUE -->
                            <div class="col-xs-6">
                                <!-- TIME HORA DESPEGUE  -->
                                <label> Hora Despegue (<span style="color: #d9534f">*</span>):</label>
                                @Html.TextBoxFor(m => m._horaDespegue, null, new { @class = "datepicker", @type = "time", @id = "horadespegue", @style = "width: 100%;" })
                            </div>
                            <!-- FIN HORA DESPEGUE -->
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12" style="margin-top:10px;">
                            <div class="col-xs-6">
                                <!-- DROPDOWN ELEGIR MATRICULA AVION -->
                                <label> Elegir avion (<span style="color: #d9534f">*</span>):</label>
                                @Html.DropDownListFor(m => m._matriculaAvion, new SelectList(Model._matriculasAvion, "Value", "Text"),
                            "Seleccione un avion", new { @style = "width: 100%;", @disabled = "disabled" })
                            </div>
                            <!-- FIN ELEGIR MATRICULA AVION -->
                            <div class="col-xs-6">
                                <!-- TEXTBOXFOR MODELO AVION -->
                                <label> Modelo avion:</label>
                                @Html.TextBoxFor(m => m._modeloAvion, null, new { @class = "form-control", @id = "modeloAvion", @disabled = "disabled" })
                            </div>
                            <!-- FIN MODELO AVION -->
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12" style="margin-top:10px;">
                            <div class="col-xs-6">
                                <!-- TEXTBOXFOR CANTIDAD PASAJEROS -->
                                <label>Capacidad de pasajeros del avion:</label>
                                @Html.TextBoxFor(m => m._pasajerosAvion, null, new { @class = "form-control", @id = "pasajerosAvion", @disabled = "disabled" })
                            </div>
                            <!-- FIN CANTIDAD PASAJEROS -->
                            <!-- TEXTBOXFOR DISTANCIA MAXIMA VUELO AVION -->
                            <div class="col-xs-6">
                                <label>Distancia maxima de vuelo:</label>
                                @Html.TextBoxFor(m => m._distanciaMaxima, null, new { @class = "form-control", @id = "distanciaMaxima", @disabled = "disabled" })
                            </div>
                            <!-- DISTANCIA MAXIMA VUELO AVION -->
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12" style="margin-top:10px;">
                            <!-- TEXTBOXFOR VELOCIDAD MAXIMA VUELO AVION -->
                            <div class="col-xs-6">
                                <label>Velocidad maxima:</label>
                                @Html.TextBoxFor(m => m._velocidadMaxima, null, new { @class = "form-control", @id = "velocidadMaxima", @disabled = "disabled" })
                            </div>
                            <!-- FIN TEXTBOXFOR VELOCIDAD MAXIMA VUELO AVION -->
                            <div class="col-xs-6">
                                <!-- DROPDOWNLISTFOR STATUS-->
                                <label> Estado vuelo (<span style="color: #d9534f">*</span>):</label>
                                @Html.DropDownListFor(m => m._statusVuelo, new SelectList(Model._statusesVuelo, "Value", "Text"),
                            "Seleccione el status", new { @style = "width: 100%;" })
                            </div>
                            <!-- FIN STATUS  -->
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12" style="margin-top:10px;">
                            <div class="col-xs-6">
                                <!-- DATE FECHA ATERRIZAJE  -->
                                <label> Fecha Aterrizaje:</label>
                                @Html.TextBoxFor(m => m._fechaAterrizaje, null, new { @class = "datepicker", @type = "date", @id = "fechaaterrizaje", @style = "width: 100%;", @disabled = "disabled" })
                            </div>
                            <!-- FIN FECHA ATERRIZAJE  -->
                            <div class="col-xs-6">
                                <label> Hora Aterrizaje:</label>
                                @Html.TextBoxFor(m => m._horaAterrizaje, null, new { @class = "datepicker", @type = "time", @id = "horaaterrizaje", @style = "width: 100%;", @disabled = "disabled" })
                            </div>
                        </div>
                        <div>&nbsp;</div>

                        <!-- FIN CAMPOS FORMULARIO-->
                        <!-- BOTON GUARDAR-->
                        <div class="col-md-12" style="margin-top:10px;">
                            <button type="submit" id="agregarVuelo" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>

    <script>
        $("#agregarVuelo").click(function (e) {
            e.preventDefault();
            var form = $("#formGuardarVuelo");
            $.ajax({
                url: "gestion_vuelo/guardarVuelo",
                data: form.serialize(),
                type: 'POST',
                success: function (data) {
                    alert("Se guardo el vuelo exitosamente");
                    $('formGuardarVuelo')[0].reset();
                }
            });
        });
    </script>

}
