@model BOReserva.Models.gestion_ruta_comercial.CAgregarRuta

<script src="~/Scripts\Scripts_Rutas\llamadas_generales_ruta.js"></script>

@{
    List<SelectListItem> listTipo = new List<SelectListItem>();
    List<SelectListItem> listEstado = new List<SelectListItem>();
    IEnumerable<SelectListItem> listOrigen = Model._lorigenRuta;


    listTipo.Add(new SelectListItem
    {
        Text = "Aérea",
        Value = "aerea"
    });
    listTipo.Add(new SelectListItem
    {
        Text = "Marítima",
        Value = "maritima",

    });

    listEstado.Add(new SelectListItem
    {
        Text = "Activa",
        Value = "activa"
    });
    listEstado.Add(new SelectListItem
    {
        Text = "Inactiva",
        Value = "inactiva",

    });

}

@using (Html.BeginForm("guardarRuta", "gestion_ruta_comercial", null, FormMethod.Post, new { @id = "formGuardarRuta", @class = "form-horizontal" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="box">

                <div class="box-body">
                    <h2 class="box-title"> Modificar Ruta</h2>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Elegir Tipo de la Ruta:</label>
                            @Html.DropDownListFor(m => m._tipoRuta, listTipo, new { @class = "form-control", @placeholder = "Aérea", @id = "rutaTipo", @required = "true" })
                            <br />
                            <label>Elegir Estado de la Ruta:</label>
                            @Html.DropDownListFor(m => m._estadoRuta, listEstado, new { @class = "form-control", @placeholder = "Aérea", @id = "rutaEstado", @required = "true" })
                            <br />
                            <label>Elegir Origen de la Ruta:</label>
                            @Html.DropDownListFor(m => m._origenRuta, new SelectList(Model._lorigenRuta as System.Collections.IEnumerable, "Value", "Text"),
              Model._origenRuta, new { @class = "form-control", @id = "ciudadO", @style = "width: 100%;", @required = "true" })
                            <br />
                            <label>Elegir Destino de la Ruta:</label>
                            @Html.DropDownListFor(m => m._destinoRuta, new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text"),
                                Model._destinoRuta, new { @class = "form-control", @id = "ciudadD", @style = "width: 100%;", @required = "true" })
                            <br />
                            <label>Agregar distancia de la Ruta (KM):</label>
                            @Html.TextBoxFor(m => m._distanciaRuta, null, new { @class = "form-control", @placeholder = "1200 KM", @id = "rutaDistancia", @min = 1, @required = "true" })
                            <br />
                            <div class="col-md-12" style="margin-top:10px;">
                                <button type="button" id="enviar" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->



