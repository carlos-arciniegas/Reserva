@model BOReserva.Models.gestion_hoteles.CGestionHoteles_EditarHotel 

<script src="~/Scripts/Scripts_Hoteles/editar_hotel.js"></script>

@using (Html.BeginForm("editarhotel", "gestion_hoteles", null, FormMethod.Post, new { @id = "formEditarHotel", @class = "form-horizontal" }))
{
<div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"><b>Actualizar de hotel</b></h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label>Nombre</label>
                          <!--  <input type="nombre" class="form-control" id="nombreHotel" placeholder="Introduzca nombre">-->
                            @Html.TextBoxFor(m => m._nombre, null, new { @class = "form-control", @placeholder = "Introduzca nombre", @id = "nombreHotel" })


                        </div>
                        <div class="form-group">
                            <!--<label>Dirección</label>-->
                            <!--<textarea name="direccion" rows="2" class="form-control" placeholder="Introduzca dirección del inmueble"></textarea>-->
                            <!--País y ciudad-->
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <!-- select -->
                                        <div class="form-group">
                                            <label>País</label>
                                            <select class="form-control"></select>
                                        </div>
                                    </div><!--div col-xs-->
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label>Ciudad</label>
                                            <select class="form-control"></select>

                                        </div>
                                    </div>
                                </div> <!--/div row-->
                            </div> <!--/div box-body-->  

                            <!--País y ciudad-->
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-xs-6">
                                    <!-- select -->
                                    <div class="form-group">
                                        <label>Clasificación</label>
                                        <select class="form-control">
                                            <option>1 Estrella</option>
                                            
                                        </select>
                                    </div>
                                </div><!--div col-xs-->
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label for="Puntuacion">Puntuación</label>
                                        <input type="clasificacion" class="form-control" id="puntuacionHotel" placeholder="Rate">
                                    </div>
                                </div>
                            </div> <!--/div row-->
                        </div> <!--/div box-body-->
                        <div class="form-group">
                            <label for="pagina">Página Web</label>
                            <input type="pagina" class="form-control" id="paginaHotel" placeholder="Introduzca página web">
                        </div>
                        <div class="form-group">
                            <label for="pagina">Correo Electrónico</label>
                            <input type="correo" class="form-control" id="correoHotel" placeholder="Introduzca correo electrónico">
                        </div>

                    </div>

                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-success">Enviar</button>
                            <button type="button" class="btn btn-danger">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>