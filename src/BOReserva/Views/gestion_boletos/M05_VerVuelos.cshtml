<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Vuelos Disponibles</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Origen / Destino</th>
                            <th>Fecha Salida</th>
                            <th>Hora Salida</th>
                            <th>Fecha Llegada</th>
                            <th>Hora Llegada</th>
                            <th>Monto</th>
                            <th>Selección</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var item in Model)
                            {
                                String fechaSal = @item._fechaPartida.Date.ToString();
                                String horaSal = @item._fechaPartida.Time.ToString();
                                String fechaLleg = @item._fechaLlegada.Date.ToString();
                                String horaLleg = @item._fechaLlegada.Time.ToString();
                                
                                <tr id="@item._id">
                                    <td>@item._origen / @item._destino </td>
                                    <td>fechaSal</td>
                                    <td>horaSal</td>
                                    <td>fechaLlehg</td>
                                    <td>horaLLeg</td>
                                    <td>@item._monto</td>
                                    <td>
                                        <input type="checkbox" class="call-checkbox">
                                    </td>
                                </tr>
                            }
                        }
                        catch
                        {

                        }
                </table>

                <div class="col-md-12" style="margin-top:10px;">
                    <div class="col-md-4"></div>
                    <div class="col-md-2">
                        <button type="button" id="detalleVuelo" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Siguiente</button>
                    </div>
                    <div class="col-md-2">
                        <button id="cancel" type="button" class="btn btn-danger" style="display:block; margin-left:auto; margin-right:auto;">Cancelar</button>
                    </div>
                    <div class="col-md-4"></div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
