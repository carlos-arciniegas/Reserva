<div class="row">
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Boletos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>N° Boleto</th>
                            <th>Fecha</th>
                            <th>Pasajero</th>
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var item in Model)
                            {
                                String nombre = @item._pasajero._primer_nombre + " " + @item._pasajero._primer_apellido;

                                <tr id="@item._id">
                                    <td>@item._id</td>
                                    <td>@item._fechaBoleto.ToString()</td>
                                    <td>@nombre</td>
                                    <td>@item._origen.Name</td>
                                    <td>@item._destino.Name</td>
                                    <td>
                                        <a href="#"> <i class="fa fa-eye consultar"></i></a>
                                        <a href="#"><i class="fa fa-gear modificar"></i></a>
                                        <a href="#"><i class="fa fa-times eliminar"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        catch
                        {

                        }
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "pagingType": "simple_numbers",
            "language": {
                "lengthMenu": "N° _MENU_ registros por página.",
                "zeroRecords": "No se encontró registro.",
                "info": "  Mostrando registros _START_ - _END_  (_TOTAL_ registros totales).",
                "infoEmpty": "0 de 0 de 0 registros",
                "infoFiltered": "(Encontrado de _MAX_registros)",
                "search": "Buscar: ",
                "processing": "Procesando la información",
                "paginate": {
                    "first": " |< ",
                    "previous": "Anterior",
                    "next": "Siguiente",
                    "last": " >| "
                }
            }
        });
    });
</script>

<script>

    $("#m05_VisualizarAutomovil").click(function (e) {
        e.preventDefault();
        var url = '/gestion_automoviles/M08_VisualizarAutomovil';
        var method = 'GET';
        var data = '';

        $.ajax(
            {
                url: url,
                type: method,
                data: data,
                success: function (data, textStatus, jqXHR) {

                    $("#contenido").empty();
                    $("#contenido").append(data);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(errorThrown);
                }
            });

    });

</script>

