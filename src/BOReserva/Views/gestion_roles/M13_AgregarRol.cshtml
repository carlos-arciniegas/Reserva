<!-- Indico que para esta vista, M08_AgregarAutomovil, utilizare el modelo Models/gestion_automoviles/CAgregarAutomovil-->
@model BOReserva.Models.gestion_roles.CRoles

<!--Indico que, estoy abriendo un formulario que tendra como accion del submit, el controlador gestion_automoviles"Controller", 
    utilizara el metodo guardarAutomovil
    le pasara la informacion mediante un POST-->

@using (Html.BeginForm("saveVehicle", "gestion_automoviles", null, FormMethod.Post, new { @id = "formSaveVehicle", @class = "form-horizontal" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header ">
                    <h1 class="box-title"> Agregar Rol</h1>
                    <div class="box-tools pull-right">
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12" style="margin-top:10px;">
                            <div class="col-xs-6">
                                
                               
                                    
                                
                                
                                <label for="nombreRol">Inserte nombre del rol 
<!--                                (<span style="color:red">*</span>):-->
                                </label>
                                @Html.TextBoxFor(m => m.Nombre_rol, null, new { @class = "form-control", @placeholder = "nombre", @id = "nombreRol" })


                                </div>
                            <div class="col-xs-6">
                               <label for="modelo">Modulo</label><br>
                                <select name="listbox" id="listbox">
                                    @foreach (var item in Model.Menu)
                                    {

                                        <option value="@item.Nombre">
                                            @item.Nombre
                                        </option>
                                    }
                                </select>

                            </div>
                            
                            <div class="col-xs-12" style="margin-top:10px;">
                                <label for="Acceso">Tendra acceso a:</label>
                                
                                @foreach (var item in Model.Menu)
                                {
                                    <div class="checkbox">
                                        <label><input type="checkbox" value="@item.Nombre">@item.Nombre</label>
                                    </div>

                                    <!--
                                            <option value="@item.Nombre">
                                                @item.Nombre
                                            </option>
            -->
                                }

                                <!--
                                    <div class="checkbox">
                                        <label><input type="checkbox" value="">Option 1</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input type="checkbox" value="">Option 2</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input type="checkbox" value="">Option 3</label>
                                    </div>
        -->


                            </div>
                        </div>
                        <div>&nbsp;</div>
                        
                        
                        
                        <div class="col-md-12" style="margin-top:10px;">
                            <button type="submit" id="save_vehicle" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>


}
