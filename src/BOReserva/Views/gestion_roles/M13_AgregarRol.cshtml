<!-- Indico que para esta vista, M08_AgregarAutomovil, utilizare el modelo Models/gestion_automoviles/CAgregarAutomovil-->
@model BOReserva.Models.gestion_automoviles.CAgregarAutomovil

<!--Indico que, estoy abriendo un formulario que tendra como accion del submit, el controlador gestion_automoviles"Controller", 
    utilizara el metodo guardarAutomovil
    le pasara la informacion mediante un POST-->

@using (Html.BeginForm("saveVehicle", "gestion_automoviles", null, FormMethod.Post, new { @id = "formSaveVehicle", @class = "form-horizontal" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header ">
                    <h1 class="box-title"> Agregar Rol</h1>
                    <div class="box-tools pull-right">
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12" style="margin-top:10px;">
                            <div class="col-xs-6">
                                <label for="Nombre">Nombre del Rol</label><br>
                                 @Html.TextBoxFor(m => m._matricula, null, new { @class = "crearRol", @placeholder = "Nombre", @id = "vehi_placa"})
                            </div>
                            <div class="col-xs-6">
                                <label for="modulo">Modulo</label>
                                @{
                                        List<SelectListItem> _modulo = new List<SelectListItem>();
                                        _modulo.Add(new SelectListItem
                                        {
                                            Text = "",
                                            Value = ""
                                        });
                                        _modulo.Add(new SelectListItem
                                             {
                                                 Text = "Avion",
                                                 Value = "Avion"
                                             });
                                        _modulo.Add(new SelectListItem
                                             {
                                                 Text = "Crucero",
                                                 Value = "Crucero",
                                             });
                                        _modulo.Add(new SelectListItem
                                             {
                                                 Text = "Pasaje",
                                                 Value = "Pasaje"
                                             });
                                }
                                @Html.DropDownListFor(m => m._fabricante, _modulo, new { @class = "form-control", @placeholder = "Marca", @id = "vehi_marca" })
                            </div>
                        </div>
                        <div>&nbsp;</div>
                        <div class="col-md-12" style="margin-top:10px;">
                            
                            <label for="modelo">Acceso</label>
 
                            <div class="checkbox">
                                <label><input type="checkbox" value="">Option 1</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="">Option 2</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="">Option 3</label>
                            </div>
                            
                           
                        </div>
                        <div>&nbsp;</div>

                        <div class="col-md-12" style="margin-top:10px;">
                            <button type="submit" id="save_vehicle" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>

    <script>
        $("#save_vehicle").click(function (e) {
            e.preventDefault();
            var form = $("#crearRol");
            $.ajax({
                url: "gestion_automoviles/saveVehicle",
                data: form.serialize(),
                type: 'POST',
                success: function (data) {
                    alert("Se registro el vehiculo exitosamente");
                    $('#formSaveVehicle')[0].reset();
                }
            });
        });
      
    </script>

}
