

<div class="row">
    <link rel="stylesheet" href="~/Content/plugins/datatables/dataTables.bootstrap.css">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Lista de Roles</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Modulo</th>
                            
                            <th>Acceso a</th>
                        </tr>
                    </thead>
                    <tbody>
                        @try
                        {
                            foreach (var item in Model)
                            {
                                String disponibilidad;
                                if (item._disponibilidad == 1) { disponibilidad = "Disponible"; } else { disponibilidad = "No disponible"; }

                                <tr id="@item._id">
                                    <td>@item._nombre</td>
                                    <td>@item._modelo</td>
                                    <td>@Acceso</td>
                                    <td>
                                        @*<a href="#"> <i class="fa fa-eye clasedeprueba"></i></a>*@
                                        <a href="#" title="Modificar"><i class="fa fa-pencil modificar"></i></a>
                                        @if (item._disponibilidad == 1)
                                        {
                                            <a href="#" title="Deshabilitar"><i class="fa fa-times deshabilitar"></i></a>
                                        }
                                        else
                                        {
                                            <a href="#" title="Habilitar"><i class="fa fa-check habilitar"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        catch
                        {

                        }

                    <tfoot>
                        <tr>
                            <th>Nombre</th>
                            <th>Modulo</th>
                           
                            <th>Acceso a</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

<script language="javascript" type="text/javascript">


    $(".modificar").click(function () {
        console.log("hola");
        var identificador = $(this).parent().parent().parent().attr("id");
        jQuery.ajax({
            type: "GET",
            url: "/gestion_aviones/M02_ConsultarAvion",
            data: { id: identificador }
        }).done(function (data) {
            $("#contenido").empty();
            $("#contenido").append(data);
        }).fail(function () {

        });


    });


    $(".deshabilitar").click(function () {
        console.log("hola");
        var identificador = $(this).parent().parent().parent().attr("id");
        jQuery.ajax({
            type: "POST",
            url: "/gestion_aviones/deshabilitarAvion",
            data: { id: identificador }
        }).done(function (data) {
            var url = '/gestion_aviones/M02_VisualizarAviones';
            var method = 'GET';
            var data = '';
            $.ajax(
                {
                    url: url,
                    type: method,
                    data: data,
                    success: function (data, textStatus, jqXHR) {

                        $("#contenido").empty();
                        $("#contenido").append(data);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });
        }).fail(function () {
            alert("Error en la base de datos");
        });
    });

    $(".habilitar").click(function () {
        console.log("hola");
        var identificador = $(this).parent().parent().parent().attr("id");
        jQuery.ajax({
            type: "POST",
            url: "/gestion_aviones/habilitarAvion",
            data: { id: identificador }
        }).done(function (data) {
            var url = '/gestion_aviones/M02_VisualizarAviones';
            var method = 'GET';
            var data = '';
            $.ajax(
                {
                    url: url,
                    type: method,
                    data: data,
                    success: function (data, textStatus, jqXHR) {

                        $("#contenido").empty();
                        $("#contenido").append(data);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });
        }).fail(function () {
            alert("Error en la base de datos");
        });
    });


</script>

