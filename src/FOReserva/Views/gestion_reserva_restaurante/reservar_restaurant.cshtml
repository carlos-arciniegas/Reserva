@model FOReserva.Models.Restaurantes.CRestaurantModel
@{
    ViewBag.Title = "reservar_restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- FEATURED GRID -->


<div class="row">
    <div class="panel panel-default col-sm-5">
        <div class="panel-heading">
            <h2 class="panel-title">Reservar restaurante</h2>
        </div>
        <div class="panel-body center-block">

            @using (Html.BeginForm("confirma_restaurant", "gestion_reserva_restaurante", FormMethod.Post))
            {
                <input type="hidden" name="id" id="" value="@Model.Id" />
                <input type="hidden" name="name_rest" id="" value="@Model.Name" />
                <input type="hidden" name="addres_rest" id="" value="@Model.Addres" />
                <div class="form-group">

                    <label>A nombre de: </label>
                    <input type="text" name="name_client" id="name_client" value="" class="form-control" data-format="" data-lang="en" data-rtl="false" placeholder="Ingrese su nombre">
                </div>
                <div class="form-group">

                    <label>Fecha: </label>
                    <input type="text" name="reserv_date" id="reserv_date" value="" class="form-control datepicker required" data-format="yyyy-mm-dd" data-lang="en" data-rtl="false" placeholder="Selecciona la fecha">
                </div>
                <div class="form-group">
                    <label>Hora:</label>
                    <select name="reserv_hour" id="reserv_hour" class="form-control pointer required">
                        <option value="" selected>Selecciona la hora:</option>
                        <option value="7:00">7:00</option>
                        <option value="8:00">8:00</option>
                        <option value="9:00">9:00</option>
                        <option value="10:00">10:00</option>
                        <option value="11:00">11:00</option>
                        <option value="12:00">12:00</option>
                        <option value="13:00">13:00</option>
                        <option value="14:00">14:00</option>
                        <option value="15:00">15:00</option>
                        <option value="16:00">16:00</option>
                        <option value="17:00">17:00</option>
                        <option value="18:00">18:00</option>
                        <option value="19:00">19:00</option>
                        <option value="20:00">20:00</option>
                        <option value="21:00">21:00</option>
                        <option value="22:00">22:00</option>
                        <option value="23:00">23:00</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Numero de personas:</label>
                    <input type="text" name="number_person" id="number_person" value="1" min="1" max="1000" class="form-control stepper">
                </div>
                <div class="text-center">
                    <input type="submit" value="Reservar" class="btn btn-primary boton">
                </div>
            }
        </div>

    </div>
 
    <div class="col-sm-7">
        <div class="relative">
            <div style="height: 443.6px;background-image: url('../Images/restaurant_generic.jpg');background-repeat: no-repeat;background-size: cover;">
                <div class="absolute text-left">
                    <h2>  <b>@Model.Name</b>  </h2>
                    <p style="color: #fff;">Madrid</p>
                    <p style="color: #fff;" class="font-lato margin-top-30 size-16 hidden-sm hidden-xs"><b>Dirección: </b> @Model.Addres</p>
                </div>
            </div>

        </div>

    </div>

</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">Descripción</h2>
        </div>
        <div class="panel-body">
            @Model.Description
        </div>
    </div>
</div>
<!-- /FEATURED GRID -->
